# DietMe Environment Configuration Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to git!

# ===================================
# Database Configuration
# ===================================
DATABASE_URL=jdbc:postgresql://localhost:5432/dietme
DATABASE_USERNAME=dietme
DATABASE_PASSWORD=your_secure_password_here

# ===================================
# AWS Configuration
# ===================================
# For local development with LocalStack, use:
# AWS_ENDPOINT_OVERRIDE=http://localhost:4566
# For production, remove or comment out AWS_ENDPOINT_OVERRIDE

AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# S3 Configuration
S3_BUCKET_NAME=dietme-uploads

# SES Configuration
SES_FROM_EMAIL=noreply@yourdomain.com
SES_REPLY_TO_EMAIL=support@yourdomain.com

# ===================================
# Application Configuration
# ===================================
# Server port (default: 8080)
SERVER_PORT=8080

# Profile (dev, test, prod)
SPRING_PROFILES_ACTIVE=dev

# ===================================
# Security Configuration
# ===================================
# JWT secret (generate with: openssl rand -base64 64)
JWT_SECRET=your_jwt_secret_here

# CORS allowed origins (comma-separated for production)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app

# ===================================
# Logging Configuration
# ===================================
LOG_LEVEL=INFO

# ===================================
# Optional: Secrets Manager (Production)
# ===================================
# AWS_SECRETS_MANAGER_ENABLED=true
# AWS_SECRETS_MANAGER_SECRET_NAME=dietme/prod/secrets
